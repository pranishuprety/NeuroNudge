{
  "manifest_version": 3,
  "name": "NeuroNudge",
  "version": "1.0.0",
  "description": "Privacy-first focus and mental-energy coach.",
  "permissions": ["idle", "storage", "notifications", "tabs", "tts", "alarms", "windows", "webNavigation"],
  "host_permissions": [
    "<all_urls>",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": { "service_worker": "background.js", "type": "module" },
  "options_page": "options.html",
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_kpm.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inspiration.html", "inspiration.js", "focus_guard.html", "focus_guard.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": { "128": "icons/icon128.png" }
}
